<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             x:Class="SaveManagerr.DashboardView">

  <ScrollViewer Background="#1a1a1a">
    <StackPanel Margin="40,30,40,30">
      
      <!-- Header Section -->
      <StackPanel Margin="0,0,0,30">
        <DockPanel Margin="0,0,0,10">
          <StackPanel DockPanel.Dock="Left">
            <TextBlock Text="{Binding Source={x:Static sys:Environment.UserName}, StringFormat='Welcome, {0}'}" 
                       FontSize="28" FontWeight="Bold" Foreground="White"/>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
              <TextBlock Text="Here's a quick overview of your games' save files" FontSize="16" Foreground="#aaa" Margin="0,0,8,0"/>
              <TextBlock Text="👀" FontSize="16"/>
            </StackPanel>
          </StackPanel>
          <TextBox DockPanel.Dock="Right" VerticalAlignment="Top" Width="300" Height="36" 
                   Background="#333" BorderBrush="#555" BorderThickness="1" 
                   Foreground="White" FontSize="14" Padding="12,8" 
                   HorizontalAlignment="Right"
                   Watermark="🔍 Search games..." />
        </DockPanel>
      </StackPanel>

      <!-- Quick Stats Cards -->
      <StackPanel Orientation="Horizontal" Spacing="20" Margin="0,0,0,40">
        <Border Background="#2d2d2d" CornerRadius="8" Padding="20" MinWidth="200">
          <StackPanel>
            <TextBlock Text="📂" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="12" FontSize="32" FontWeight="Bold" Foreground="#00d4aa" HorizontalAlignment="Center"/>
            <TextBlock Text="Games Found" FontSize="14" Foreground="#aaa" HorizontalAlignment="Center"/>
          </StackPanel>
        </Border>
        
        <Border Background="#2d2d2d" CornerRadius="8" Padding="20" MinWidth="200">
          <StackPanel>
            <TextBlock Text="💾" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="847" FontSize="32" FontWeight="Bold" Foreground="#00d4aa" HorizontalAlignment="Center"/>
            <TextBlock Text="Save Files" FontSize="14" Foreground="#aaa" HorizontalAlignment="Center"/>
          </StackPanel>
        </Border>
        
        <Border Background="#2d2d2d" CornerRadius="8" Padding="20" MinWidth="200">
          <StackPanel>
            <TextBlock Text="📦" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="5" FontSize="32" FontWeight="Bold" Foreground="#00d4aa" HorizontalAlignment="Center"/>
            <TextBlock Text="Backups" FontSize="14" Foreground="#aaa" HorizontalAlignment="Center"/>
          </StackPanel>
        </Border>
      </StackPanel>

    </StackPanel>
  </ScrollViewer>

</UserControl>
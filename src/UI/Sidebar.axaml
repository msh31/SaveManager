<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SaveManager.UI.Sidebar">
    
        <Border Grid.Column="0" Background="#2d2d2d" BorderBrush="#444" BorderThickness="0,0,1,0">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Section with Logo and Navigation -->
        <StackPanel Grid.Row="0" Margin="0,20,0,0">
          
          <!-- App Logo/Title - Centered -->
          <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="20,0,20,30">
            <Image Height="64" Width="64" Source="avares://SaveManager/assets/sm_icon.png" HorizontalAlignment="Center"/>
            <TextBlock Text="SaveManager" FontSize="18" FontWeight="Bold" Foreground="White" 
                       HorizontalAlignment="Center" Margin="0,10,0,0"/>
          </StackPanel>

          <!-- Navigation Items -->
          <Button Classes="nav-item active" Margin="10,0,10,5" Height="44">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
              <TextBlock Text="🏠" FontSize="16" Margin="0,0,12,0" VerticalAlignment="Center"/>
              <TextBlock Text="Dashboard" FontSize="14" FontWeight="Medium" VerticalAlignment="Center"/>
            </StackPanel>
          </Button>

          <Button Classes="nav-item" Margin="10,0,10,5" Height="44">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
              <TextBlock Text="💾" FontSize="16" Margin="0,0,12,0" VerticalAlignment="Center"/>
              <TextBlock Text="Saves" FontSize="14" FontWeight="Medium" VerticalAlignment="Center"/>
            </StackPanel>
          </Button>

          <Button Classes="nav-item" Margin="10,0,10,5" Height="44">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
              <TextBlock Text="📦" FontSize="16" Margin="0,0,12,0" VerticalAlignment="Center"/>
              <TextBlock Text="Backup" FontSize="14" FontWeight="Medium" VerticalAlignment="Center"/>
            </StackPanel>
          </Button>

          <Button Classes="nav-item" Margin="10,0,10,5" Height="44">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
              <TextBlock Text="📥" FontSize="16" Margin="0,0,12,0" VerticalAlignment="Center"/>
              <TextBlock Text="Restore" FontSize="14" FontWeight="Medium" VerticalAlignment="Center"/>
            </StackPanel>
          </Button>

          <Button Classes="nav-item" Margin="10,0,10,5" Height="44">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
              <TextBlock Text="🔄" FontSize="16" Margin="0,0,12,0" VerticalAlignment="Center"/>
              <TextBlock Text="Synchronize" FontSize="14" FontWeight="Medium" VerticalAlignment="Center"/>
            </StackPanel>
          </Button>

          <Button Classes="nav-item" Margin="10,0,10,5" Height="44">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
              <TextBlock Text="📋" FontSize="16" Margin="0,0,12,0" VerticalAlignment="Center"/>
              <TextBlock Text="Logs" FontSize="14" FontWeight="Medium" VerticalAlignment="Center"/>
            </StackPanel>
          </Button>
          
        </StackPanel>

        <!-- Middle spacer (Row 1 with Height="*" fills remaining space) -->

        <!-- Bottom Section - Actually at bottom -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
          <Button Classes="nav-item" Margin="10,0,10,5" Height="44">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
              <TextBlock Text="👤" FontSize="16" Margin="0,0,12,0" VerticalAlignment="Center"/>
              <TextBlock Text="Log in" FontSize="14" FontWeight="Medium" VerticalAlignment="Center"/>
            </StackPanel>
          </Button>

          <Button Classes="nav-item" Margin="10,0,10,5" Height="44">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
              <TextBlock Text="⚙️" FontSize="16" Margin="0,0,12,0" VerticalAlignment="Center"/>
              <TextBlock Text="Settings" FontSize="14" FontWeight="Medium" VerticalAlignment="Center"/>
            </StackPanel>
          </Button>
        </StackPanel>

      </Grid>
    </Border>
</UserControl>
